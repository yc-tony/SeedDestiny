<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定義日誌輸出格式 -->
    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%-5level][%logger{36}][%line] %msg%n"/>

    <!-- Console 輸出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Spring Boot 相關的日誌級別設定 -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="org.springframework.security.oauth2" level="ERROR"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="ERROR"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate" level="ERROR"/>

    <!-- 您的應用程式日誌級別 -->
    <logger name="com.seeddestiny.freedom" level="DEBUG"/>

    <!-- Root Logger - 只輸出到 Console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
