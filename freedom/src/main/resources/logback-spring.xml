<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定義日誌輸出格式 -->
    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%-5level][%logger{36}][%line] %msg%n"/>

    <!-- Console 輸出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    e.getLoggerName() == "jdbc.sqltiming" &amp;&amp; e.message?.contains("select 1")
                </expression>
            </evaluator>
            <onMatch>DENY</onMatch>
        </filter>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Spring Boot 相關的日誌級別設定 -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>

    <!-- log4jdbc 日誌設定 -->
    <logger name="log4jdbc.debug" level="OFF"/>
    <logger name="jdbc.connection" level="OFF"/>        <!-- 連線開啟/關閉 -->
    <logger name="jdbc.resultset" level="OFF"/>          <!-- ResultSet 資料 -->
    <logger name="jdbc.resultsettable" level="OFF"/>     <!-- ResultSet 表格形式 -->
    <logger name="jdbc.audit" level="OFF"/>              <!-- 所有 JDBC 呼叫 -->
    <logger name="jdbc.sqlonly" level="OFF"/>            <!-- 只顯示 SQL（不含參數） -->
    <logger name="jdbc.sqltiming" level="INFO"/>         <!-- 顯示 SQL + 參數 + 執行時間 -->

    <!-- 您的應用程式日誌級別 -->
    <logger name="com.seeddestiny.freedom" level="DEBUG"/>

    <!-- Root Logger - 只輸出到 Console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
